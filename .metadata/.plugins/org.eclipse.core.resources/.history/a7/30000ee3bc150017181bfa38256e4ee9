        http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<!-- 配置solrj的单机版连接对象 -->
	<bean class="org.apache.solr.client.solrj.impl.HttpSolrServer">
		<!-- 配置solr服务单机版地址 -->
<!-- 		<constructor-arg name="baseURL" value="${solrj.baseURL}" /> -->
		<constructor-arg name="baseURL" type="" value="${solrj.baseURL}" />
	</bean>

	<!-- 配置solrj的集群版连接对象 -->
	<bean class="org.apache.solr.client.solrj.impl.CloudSolrServer">
		<!-- 配置集群版的zookeeper的连接地址 -->
		<constructor-arg name="zkHost" value="${cloud.zkHost}" />
		<!-- 配置集群的collection名字 -->
		<property name="defaultCollection" value="${cloud.collection}" />
	</bean>

</beans>
        